<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TextAppearance -->

    <style name="AppTextAppearance.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTextAppearance.Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/gray_300</item>
    </style>

    <!-- Styles -->

    <style name="AppTheme.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/AppTextAppearance.Toolbar.Title</item>
        <item name="subtitleTextAppearance">@style/AppTextAppearance.Toolbar.Subtitle</item>
    </style>

    <style name="AppTheme.AppBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

</resources>