    <style name="Toolbar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_big</item>
