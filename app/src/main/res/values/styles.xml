<resources>

    <!-- AppTheme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationView</item>
        <item name="floatingActionButtonStyle">@style/Fab</item>
    </style>

    <!-- Launcher -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- Fab -->
    <style name="Fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="fabSize">normal</item>
        <item name="useCompatPadding">true</item>
    </style>

    <!-- Navigation -->
    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/navigation_menu_selector</item>
        <item name="itemTextColor">@color/navigation_menu_selector</item>
        <item name="labelVisibilityMode">selected</item>
    </style>

</resources>