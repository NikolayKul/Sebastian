<resources>

    <!-- TextAppearance -->
    <style name="AppTextAppearance" parent="TextAppearance.AppCompat">
        <item name="textSize">@dimen/text_size_normal</item>
    </style>

    <!-- Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">@style/AppTextAppearance</item>
    </style>

    <!-- Fab -->
    <style name="SimpleFab">
        <item name="android:layout_width">@dimen/fab_size_normal</item>
        <item name="android:layout_height">@dimen/fab_size_normal</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:scaleType">center</item>
        <item name="useCompatPadding">true</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>


</resources>