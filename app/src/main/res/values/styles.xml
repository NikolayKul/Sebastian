<resources>

    <!-- AppTheme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/Toolbar</item>
        <item name="floatingActionButtonStyle">@style/Fab</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationView</item>
    </style>

    <!-- Launcher -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- Fab -->
    <style name="Fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="fabSize">normal</item>
        <item name="useCompatPadding">true</item>
    </style>

    <!-- Navigation -->
    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/navigation_menu_selector</item>
        <item name="itemTextColor">@color/navigation_menu_selector</item>
        <item name="labelVisibilityMode">selected</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/AppTheme.TextAppearance.Widget.Toolbar.Title</item>
        <item name="subtitleTextAppearance">@style/AppTheme.TextAppearance.Widget.Toolbar.Subtitle
        </item>
    </style>

    <!-- AppBar -->
    <style name="AppTheme.AppBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

</resources>