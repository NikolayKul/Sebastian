<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- Constraint layout -->

    <style name="ConstraintLayout" />

    <style name="ConstraintLayout.Center">
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <!-- Fab -->
    <style name="Fab">
        <item name="android:layout_width">@dimen/fab_size_normal</item>
        <item name="android:layout_height">@dimen/fab_size_normal</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:scaleType">center</item>
        <item name="useCompatPadding">true</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

</resources>