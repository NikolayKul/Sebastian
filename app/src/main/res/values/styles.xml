<resources>

    <!-- AppTheme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Launcher -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- Fab -->
    <style name="AppTheme.Fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">@dimen/fab_size_normal</item>
        <item name="android:layout_height">@dimen/fab_size_normal</item>
        <item name="android:scaleType">center</item>
        <item name="useCompatPadding">true</item>
    </style>


</resources>